{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "bg3txt",
  "patterns": [
    {
      "name": "entry_name.bg3txt",
      "match": "\\b(new entry|data|type|using|IF|and|or)\\b"
    },
    {
      "name": "comment.bg3txt",
      "match": "^(\\s)*//.*$"
    },
    {
      "name": "keywords.bg3txt",
      "match": "(?<=\\b(new entry|type|data|using)\\s)\"[^\"]+\""
    },
    {
      "name": "entry_type.bg3txt",
      "match": "(\\+|\\-|\\*|\\/|\\%|\\=|\\>|\\<|\\!|\\&|\\||\\^|\\~|\\?|\\'|\\:|\\,|\\;|\\\")"
    }
  ],
  "scopeName": "source.bg3txt"
}