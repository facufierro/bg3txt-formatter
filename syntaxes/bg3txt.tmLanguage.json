{
  
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "bg3txt",
  "patterns": [
    {
      "name": "keyword.control.bg3txt",
      "match": "\\b(new entry|data|type|using|IF)\\b"
    },
    {
      "match": "^(\\s)*//.*$",
      "name": "comment.line.bg3txt"
    },
    {
      "name": "string.first-column.bg3txt",
      "match": "(?<=\\b(new entry|type|data|using)\\s)\"[^\"]+\""
    },
    {
      "match": "(\\+|\\-|\\*|\\/|\\%|\\=|\\>|\\<|\\!|\\&|\\||\\^|\\~|\\?|\\'|\\:|\\,|\\;|\\\")",
      "name": "keyword.operator.bg3txt"
    }
  ],
  "scopeName": "source.bg3txt"
}
