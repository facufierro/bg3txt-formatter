{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "bg3txt",
  "patterns": [
    {
      "name": "keywords.bg3txt",
      "match": "new entry|type|data|using"
    },
    {
      "name": "statements.bg3txt",
      "match": "IF|not|\\:"
    },
    {
      "name": "comment.bg3txt",
      "match": "//"
    },
    {
      "name": "operators.bg3txt",
      "match": "\\+|\\-|\\*|\\/|\\%|\\=|\\>|\\<|\\!|\\&|\\||\\^|\\~|\\?|\\'|\\,|\\;|\\\""
    }
  ],
  "scopeName": "source.bg3txt"
}