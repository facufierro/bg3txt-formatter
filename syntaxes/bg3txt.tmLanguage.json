{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "bg3txt",
  "patterns": [
    {
      "name": "keyword.control.bg3txt",
      "match": "\\b(new entry|data|type|IF)\\b"
    },
    {
      "match": "^(\\s)*//.*$",
      "name": "comment.line.bg3txt"
    },
    {
      "match": "(\\+|\\-|\\*|\\/|\\%|\\=|\\>|\\<|\\!|\\&|\\||\\^|\\~|\\?|\\'|\\:|\\,|\\;|\\.)",
      "name": "keyword.operator.bg3txt"
    },
    {
      "name": "string.first-column.bg3txt",
      "match": "(?<=\\b(new entry|type|data)\\s)\"[^\"]+\""
    }
  ],
  "scopeName": "source.bg3txt"
}
