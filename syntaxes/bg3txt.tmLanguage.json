{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "bg3txt",
  "patterns": [
    {
      "name": "all.bg3txt",
      "match": ".*"
    },
    {
      "name": "keyword.bg3txt",
      "match": "\\b(new entry|type|data|using)\\b"
    },
    {
      "name": "statement.bg3txt",
      "match": "\\b(IF|not|\\:)\\b"
    },
    {
      "name": "first-column.bg3txt",
      "match": "(?<=\\b(new entry|type|data|using)\\s)\"[^\"]+\""
    },
    {
      "match": "(\\+|\\-|\\*|\\/|\\%|\\=|\\>|\\<|\\!|\\&|\\||\\^|\\~|\\?|\\'|\\,|\\;|\\\")",
      "name": "operator.bg3txt"
    },
    {
      "match": "^(\\s)*//.* $",
      "name": "comment.bg3txt"
    }
  ],
  "scopeName": "source.bg3txt"
}